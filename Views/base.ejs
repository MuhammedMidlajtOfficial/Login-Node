<%- include('header') -%>


<div class="text-center center-div" id="login">
    <div class="container w-25 py-5">
        <div class="title">
            <h2 class="font-weight-bold">Login Page</h2>
            <h4 style="font-size: small;">Login for the existing user</h4>
            <% if(locals.invalidUser){ %>
                <div class="alert alert-danger">Invalid Email or Password</div>
            <% } %>
            <% if(locals.logout){ %>
                <div class="alert alert-success">Logout Successfull...!</div>
            <% } %> 
        </div>
        <form action="/route/login" method="POST">
            <div class="form-group">
                <label class="form-text text-muted text-left">Registered email address</label>
                <input type="email" class="form-control" placeholder="Email..." name="email" id="" required>
            </div>
            <div class="form-group pt-3">
                <input type="password" class="form-control" placeholder="Password..." name="password" id="" required>
            </div>
            <button type="submit" class="btn btn-primary mt-3 w-25">Login</button>
        </form>
    </div>
</div>


<%- include('footer') -%>